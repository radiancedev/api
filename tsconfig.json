{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "esnext",
        "strict": true,
        "allowJs": true,
        "declaration": true,
        "esModuleInterop": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "app/**/*.ts",
        "routes/**/*.ts",
        "server.ts"
    ]
}